	<subDataset name="chart_dataset">
		<parameter name="entityId" class="java.lang.Integer"/>
		<parameter name="startDate" class="java.util.Date"/>
		<parameter name="endDate" class="java.util.Date"/>
		<queryString>
			<![CDATA[select
                count(u.id) as user_count,
                to_char(u.create_datetime, 'MM') as month_of_year,
                to_char(u.create_datetime, 'Month') as month,
                to_char(u.create_datetime, 'yyyy') as year
            from
                base_user u
                inner join user_role_map r on r.user_id = u.id
            where
                u.entity_id = $P{entityId}
                and u.deleted = 0
                and r.role_id = 5 -- is a customer
                and u.create_datetime >= $P{startDate}
                and u.create_datetime <= $P{endDate}
            group by month_of_year, month, year
            order by year, month_of_year]]>
		</queryString>
		<field name="user_count" class="java.lang.Long"/>
		<field name="month_of_year" class="java.lang.String"/>
		<field name="month" class="java.lang.String"/>
		<field name="year" class="java.lang.String"/>
	</subDataset>
