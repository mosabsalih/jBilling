	<queryString>
		<![CDATA[select
            u.id as user_id,
            u.user_name,
            co.first_name,
            co.last_name,
            co.organization_name,
            co.state_province,
            co.country_code,
            cu.auto_payment_type, -- convert to CH = Check, CC = credit card, ACH or blank
            u.status_id,          -- convert to A = Active, S = Suspended, O = Overdue
            max(i.create_datetime) as last_billing_date,
            max(p.create_datetime) as last_payment_date,
            (
                (select coalesce(sum(i.balance), 0) from invoice i where i.deleted = 0 and i.status_id != 26 and i.is_review != 1 and i.user_id = u.id)
                - (select coalesce(sum(p.balance), 0) from payment p where p.deleted = 0 and p.user_id = u.id)
            ) as current_balance
        from
            base_user u
            inner join customer cu on cu.user_id = u.id
            inner join contact co on co.user_id = u.id
            left join payment p on p.user_id = u.id
            left join invoice i on i.user_id = u.id
        where
            u.entity_id = $P{entity_id}
            and u.deleted = 0
            and p.deleted = 0
            and i.deleted = 0
            and i.is_review = 0
        group by
            u.id,
            u.user_name,
            co.first_name,
            co.last_name,
            co.organization_name,
            co.state_province,
            co.country_code,
            cu.auto_payment_type,
            u.status_id]]>
